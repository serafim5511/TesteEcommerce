    $(function () {
        $.ajax({
            type: 'GET',
            url: "/api/ListarProdutosComEstoque",
            dataType: "JSON",
            cache: false,
            async: true,

            success: function (data) {
                debugger;
                var donutChartCanvas = $('#donutChart').get(0).getContext('2d')

                var donutData = { labels: [], datasets: [{ data: [], backgroundColor: ['#f56954', '#00a65a', '#f39c12', '#00c0ef', '#3c8dbc', '#d2d6de'],}]};

                data.forEach(function (Entitie) {
                    donutData.datasets[0].data.push(Entitie.qtdEstoque);

                    donutData.labels.push(Entitie.nome);

                });
                var donutOptions = {
                    maintainAspectRatio: false,
                    responsive: true,
                }

                new Chart(donutChartCanvas, {
                    type: 'doughnut',
                    data: donutData,
                    options: donutOptions
                })
            }
        });

